{
  "name": "projet_learning",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "vite build",
    "dev": "vite dev",
    "preview": "vite preview",
    "test": "npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "test:integration": "playwright test",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:critical": "vitest run --reporter=verbose tests/unit/auth.critical.test.js tests/unit/firebase.integration.test.js tests/unit/ui.critical.test.js",
    "test:commit": "npm run test:critical",
    "test:coverage": "vitest run --coverage.enabled --coverage.provider c8",
    "lighthouse": "npm run build && lhci autorun",
    "lighthouse:collect": "npm run build && lhci collect",
    "lighthouse:assert": "lhci assert",
    "perf:test": "node tools/performance/lighthouse-runner.cjs",
    "perf:full": "npm run lighthouse",
    "dev:ia": "node scripts/dev-ia.cjs",
    "roadmap:check": "node scripts/roadmap-checker.cjs",
    "roadmap:generate-recaps": "node scripts/generate-phase-recaps.cjs",
    "quality:gates": "node scripts/quality-gates.cjs",
    "quality:gates:phase1": "node scripts/quality-gates-phase1.cjs",
    "validation:cbd": "echo 'CBD validation intégrée dans dev:ia'",
    "validate": "npm run roadmap:check && npm run test:critical && npm run check",
    "docs:generate": "node ../MyDevFramework/tools/documentation/docs-generator.js",
    "docs:validate": "npm run docs:generate && git diff --exit-code --quiet docs/ src/README.md tests/README.md || echo 'Documentation mise à jour'",
    "analyze:postmortem": "node ../MyDevFramework/tools/learning/postmortem-learning.js",
    "learn:patterns": "npm run analyze:postmortem",
    "apply:improvements": "echo 'Fonctionnalité à développer - voir roadmap technique'",
    "monitor:patterns": "echo 'Fonctionnalité à développer - voir roadmap technique'",
    "check:env": "node --version && npm --version && echo 'Environment OK'",
    "audit:security": "npm audit --audit-level high",
    "audit:full": "npm run quality:gates && npm run audit:security"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.28.1",
    "@sveltejs/adapter-auto": "^2.1.1",
    "@sveltejs/kit": "^1.20.4",
    "@types/dompurify": "^3.0.5",
    "@types/marked": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitest/coverage-c8": "^0.33.0",
    "c8": "^10.1.3",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte": "^2.46.1",
    "lighthouse": "^12.8.2",
    "prettier": "^2.8.0",
    "prettier-plugin-svelte": "^2.10.1",
    "svelte": "^4.0.5",
    "svelte-check": "^3.4.3",
    "svelte-eslint-parser": "^1.3.1",
    "tslib": "^2.4.1",
    "typescript": "^5.9.2",
    "vite": "^4.4.2",
    "vitest": "^0.32.2"
  },
  "dependencies": {
    "dompurify": "^3.2.6",
    "firebase": "^10.14.1",
    "highlight.js": "^11.11.1",
    "marked": "^16.2.1"
  },
  "type": "module",
  "author": "Raphaël GEOFFROY <geo92fr@gmail.com>"
}
