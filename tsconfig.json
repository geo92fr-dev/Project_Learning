{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "isolatedModules": true,
    "noEmit": true,
    "types": ["vite/client", "@sveltejs/kit"],
    "paths": {
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"],
      "$app/*": ["./.svelte-kit/types/app/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "*.ts", "*.js"],
  "exclude": [
    ".svelte-kit/**/*",
    "node_modules/**/*",
    "build/**/*",
    "coverage/**/*",
    "*.config.js"
  ]
}
